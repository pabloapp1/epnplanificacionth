@model IEnumerable<Producto>

<style>
.bc-head-txt-label {
  /* left: calc(50% - .5rem);
  line-height: 1;
  padding-top: .5rem;
  position: relative; */
  transform: rotate(180deg);
  /* white-space: nowrap; */
  writing-mode: vertical-rl;
}
</style>

<div class="card text-primary bg-light mb-3">
    <div class="card-header text-center">
        <h5>Lista de Actividades</h5>        
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a asp-action="Create" class="btn btn-primary btn-sm text-black">Crear Nuevo</a>
                        <hr />
                        <h5 class="panel-title">Actividades</h5>
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped table table-bordered" id="MyTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.nombreActividad)
                                    </th>
                                    <th class="bc-head-txt-label">
                                        @Html.DisplayNameFor(model => model.conocimientoActividad)
                                    </th>
                                    <th class="bc-head-txt-label">
                                        @Html.DisplayNameFor(model => model.relacionamientoActividad)
                                    </th>
                                    <th class="bc-head-txt-label">
                                        @Html.DisplayNameFor(model => model.condicionTrabajoActividad)
                                    </th>
                                    <th class="bc-head-txt-label">
                                        @Html.DisplayNameFor(model => model.impactoActividad)
                                    </th>
                                    <th class="bc-head-txt-label">
                                        @Html.DisplayNameFor(model => model.responsabilidadActividad)
                                    </th>
                                    <th class="bc-head-txt-label">
                                        @Html.DisplayNameFor(model => model.ponderacionActividad)
                                    </th>
                                    <th class="bc-head-txt-label">
                                        @Html.DisplayNameFor(model => model.ponderacionNivelActividad)
                                    </th>
                                    <th class="bc-head-txt-label">
                                        @Html.DisplayNameFor(model => model.grupoOcupacionalActividad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.observacionActividad)
                                    </th>
                                    
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.nombreActividad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.conocimientoActividad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.relacionamientoActividad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.condicionTrabajoActividad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.impactoActividad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.responsabilidadActividad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ponderacionActividad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ponderacionNivelActividad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.grupoOcupacionalActividad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.observacionActividad)
                                        </td>
                                        
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.idActividad" class="btn btn-warning btn-sm text-black">Editar</a>
                                            <a asp-action="Details" asp-route-id="@item.idActividad" class="btn btn-info btn-sm text-black">Detalles</a>
                                            <a asp-action="Delete" asp-route-id="@item.idActividad" class="btn btn-danger btn-sm text-black">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-muted text-center">
        Actividades
    </div>
</div>